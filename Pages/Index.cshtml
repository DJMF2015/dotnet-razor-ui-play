@page
@model IndexModel
@{
    ViewData["Title"] = "The Home for Pizza Lovers";
    TimeSpan timeInBusiness = DateTime.Now - new DateTime(2021, 8, 14);
}

<div class="text-center">
    <h1 class="display-4">Welcome to Big Dave's Pizzaland!</h1>
    <p class="lead">We are a family owned and operated pizza shop in the heart of Edinburgh.</p>
    <p class="lead">The best pizza in town for @Convert.ToInt32(timeInBusiness.TotalDays) days!</p>
</div>
